<UserControl
    x:Class="DocManager.View.UserControls.TabControlDeviceMeteo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="clr-namespace:DocManager.View.UserControls"
    d:DesignHeight="100"
    d:DesignWidth="750"
    mc:Ignorable="d">
    <Grid>
        <TabControl Padding="10">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </TabControl.Resources>

            <TabItem Header="Метеоусловия">
                <usercontrols:MeteoDataGrid Padding="10" />
            </TabItem>
            <TabItem Header="Приборы">
                <usercontrols:DeviceDataGrid Padding="10" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
